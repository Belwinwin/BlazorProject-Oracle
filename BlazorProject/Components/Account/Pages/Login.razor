@page "/"
@page "/Account/Login"

@using System.ComponentModel.DataAnnotations
@using BlazorProject.Data
@using BlazorProject.Services
@using Microsoft.AspNetCore.Identity

@inject IRegistrationService RegistrationService
@inject IUserSessionService UserSession
@inject ILogger<Login> Logger
@inject NavigationManager NavigationManager
@inject IdentityRoleSync RoleSync
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<PageTitle>Log in</PageTitle>

<h1>Log in</h1>
<div class="row">
    <div class="col-lg-6">
        <section>
            <StatusMessage Message="@errorMessage" />
            <EditForm Model="Input" method="post" OnValidSubmit="LoginUser" FormName="login">
                <DataAnnotationsValidator />
                <hr />
                <ValidationSummary class="text-danger" role="alert" />
                <div class="form-floating mb-3">
                    <InputText @bind-Value="Input.Email" id="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label for="Input.Email" class="form-label">Email</label>
                    <ValidationMessage For="() => Input.Email" class="text-danger" />
                </div>
                <div class="form-floating mb-3">
                    <InputText type="password" @bind-Value="Input.Password" id="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label for="Input.Password" class="form-label">Password</label>
                    <ValidationMessage For="() => Input.Password" class="text-danger" />
                </div>

                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a href="Account/Register">Register as a new user</a>
                    </p>
                </div>
            </EditForm>
        </section>
    </div>
    
</div>

@code {
    private string? errorMessage;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    public async Task LoginUser()
    {
        var user = await RegistrationService.GetUserAsync(Input.Email, Input.Password);
        
        if (user != null)
        {

            var identityUser = await UserManager.FindByIdAsync(user.UserId);
            if (identityUser == null)
            {
                identityUser = new ApplicationUser
                {
                    Id = user.UserId,
                    UserName = user.Email,
                    Email = user.Email,
                    EmailConfirmed = true
                };
                await UserManager.CreateAsync(identityUser);
            }
            
            // Sync Oracle roles with Identity
            await RoleSync.SyncUserRolesAsync(user.UserId);
            
            // Sign in with Identity
            await SignInManager.SignInAsync(identityUser, isPersistent: false);
            
            UserSession.CurrentUserId = user.UserId;
            UserSession.CurrentUserEmail = user.Email;
            
            Logger.LogInformation("User logged in successfully.");
            NavigationManager.NavigateTo("/database-selection");
        }
        else
        {
            errorMessage = "Error: Invalid login credentials.";
        }
    }

    private sealed class InputModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = "";

        [Required]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";


    }
}
