@page "/database-selection"
@using BlazorProject.Services
@inject IUserAccessService UserAccessService
@inject IUserSessionService UserSession
@inject DatabaseConnectionService DbConnectionService
@inject NavigationManager NavigationManager

<PageTitle>Select Database</PageTitle>

@if (string.IsNullOrEmpty(UserSession.CurrentUserId))
{
    <div class="alert alert-danger">
        Please <a href="/">login</a> to access this page.
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Select Database</h3>
                        <p>Welcome, @UserSession.CurrentUserEmail</p>
                    </div>
                    <div class="card-body">
                        @if (accessibleDatabases.Any())
                        {
                            <div class="form-group">
                                <label for="databaseSelect">Available Databases:</label>
                                <select id="databaseSelect" class="form-select" @bind="selectedDatabase">
                                    <option value="" disabled selected>-- Select Database --</option>
                                    @foreach (var db in accessibleDatabases)
                                    {
                                        <option value="@db">@GetDatabaseDisplayName(db)</option>
                                    }
                                </select>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-primary" @onclick="ConnectToDatabase" disabled="@string.IsNullOrEmpty(selectedDatabase)">
                                    Connect
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                No databases are accessible for your account. Please contact administrator.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<string> accessibleDatabases = new();
    private string selectedDatabase = "";


    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(UserSession.CurrentUserId))
        {
            try
            {
                accessibleDatabases = await UserAccessService.GetUserAccessibleDatabasesAsync(UserSession.CurrentUserId);
            }
            catch (Exception ex)
            {
                // Log error if needed
            }
        }
    }

    private void ConnectToDatabase()
    {
        if (!string.IsNullOrEmpty(selectedDatabase))
        {
            DbConnectionService.SetConnection(selectedDatabase);
            NavigationManager.NavigateTo("/employee", forceLoad: true);
        }
    }

    private string GetDatabaseDisplayName(string connectionName)
    {
        return connectionName switch
        {
            "OracleConnection" => "Database 1 (c##belwin)",
            "OracleConnection2" => "Database 2 (hr)",
            "OracleConnection3" => "Database 3 (hr2)",
            _ => connectionName
        };
    }
}